#!/bin/bash

#
# $1: remote host to transfer video stream to
#

bitrate=400000
width=1024
height=576
framerate="15/1"

target="$1"
port=9080

if [ "$1" == "" ]; then
	echo "Parameter missing: Remote address"
	exit
	fi

if [ "$(pidof gst-launch-0.10)" != "" ]; then
	kill -s KILL $(pidof gst-launch-0.10)
	fi


# RTP over UDP
RTP_UDP="rtph264pay ! udpsink host=\"$target\" port=$port"

# stdout / SSH tunnel
STDOUT="filesink location=/dev/stdout"

sink=$RTP_UDP

gst-launch-0.10 -v uvch264_src device=/dev/video0 name=src auto-start=true initial-bitrate=$bitrate src.vfsrc ! queue ! 'video/x-raw-yuv,width=320,height=240' ! fakesink silent=true . src.vidsrc ! queue ! "video/x-h264,width=$width,height=$height,framerate=$framerate,profile=high" ! $sink

